<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelaLogin.MainPage">
    <StackLayout Padding="20"
                 VerticalOptions="CenterAndExpand">
        <Frame BackgroundColor="Black"
               CornerRadius="10">
            <StackLayout>
                <Label Text="Login"
                       HorizontalOptions="Center"
                       FontSize="36"/>

                <Label Text="Usuário:"/>
                <Entry x:Name="txtUsuario"
                       Placeholder="Usuário"/>

                <Label Text="Senha:"/>
                <Entry x:Name="txtSenha"
                       Placeholder="Senha"
                       IsPassword="True"/>

                <StackLayout Orientation="Horizontal">
                    <CheckBox x:Name="ckbSenha"
                              Color="Blue"
                              CheckedChanged="ckbSenha_CheckedChanged"/>
                    <Label Text="Mostrar Senha"
                           HorizontalTextAlignment="Start"
                           VerticalTextAlignment="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer 
                                Tapped="tapSenha_Tapped"/>
                        </Label.GestureRecognizers>
                    </Label>                

                </StackLayout>
                <Button x:Name="btnEntrar"
                        Text="Entrar"
                        BackgroundColor="Blue"
                        Clicked="btnEntrar_Clicked"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>
